@model List<User>
        <table class="table" border="1" style="border-color: rgb(221, 65, 18);">
    <tr>
        <th>Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Info</th>
        <th>Remove</th>        
    </tr>

    @foreach (User users in Model)
    {
    <tr>
        <td>@users.Id</td>
        <td>@users.FirstName</td>
        <td>@users.LastName</td>
        <td>@users.Email</td>

        <td>
        <a asp-asp-controller="User" asp-action="Edit" asp-route-id="@users.Id">Изменить</a>
        </td>
        <td>
        <a asp-asp-controller="User" asp-action="Delete" asp-route-id="@users.Id">Delete</a>
        </td>
    </tr>    
    }
    </table>
    <a href="User/UserAdd">
<button type="button" class="btn btn-success">Add a User</button>
</a>
