@model List<Actor>

@{
    ViewData ["Title"] = "Актёр";
}

<table class="table" border="1" style="border-color: rgb(221, 65, 18);">
    <tr>
        <th>Id</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Date of Birth</th>
        <th>Country</th>
        <th>Edit</th>
        <th>Rremove</th>
    </tr>

    @foreach (Actor actors in Model)
    {
    <tr>
        <td>@actors.Id</td>
        <td>@actors.FirstName</td>
        <td>@actors.LastName</td>
        <td>@actors.DateOfBirth</td>
        <td>@actors.Country</td>
        <td>
        <a asp-controller="Actor" asp-action="Edit" asp-route-id="@actors.Id">Изменить</a>
        </td>
        <td>
        <a asp-controller="Actor" asp-action="Delete" asp-route-id="@actors.Id">Delete</a>
        </td>
    </tr>    
    }
</table>
<a asp-controller="Actor" asp-action="AddActor">
    <button type="button" class="btn btn-success">Add</button>
</a>